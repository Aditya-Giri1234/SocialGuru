<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    app:cardBackgroundColor="@color/white"
    android:layout_margin="@dimen/_10sdp"
    android:elevation="@dimen/_4sdp"
    app:cardCornerRadius="@dimen/_15sdp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:elevation="@dimen/_5sdp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvMakeAdmin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/poppin_medium"
            android:gravity="center"
            android:text="Make Admin"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp" />


        <View
            android:id="@+id/viewBelowMakeAdmin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginVertical="@dimen/_5sdp"
            android:alpha=".1"
            android:background="@color/black" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDismissAsAdmin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:fontFamily="@font/poppin_medium"
            android:gravity="center"
            android:text="Dismiss As Admin"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp" />


        <View
            android:id="@+id/viewBelowDismissAsAdmin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginVertical="@dimen/_5sdp"
            android:alpha=".1"
            android:background="@color/black" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvRemoveUser"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:fontFamily="@font/poppin_medium"
            android:gravity="center"
            android:text="Remove From Group"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp" />


        <View
            android:id="@+id/viewBelowRemoveUser"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginVertical="@dimen/_5sdp"
            android:alpha=".1"
            android:background="@color/black" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSendMessage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:fontFamily="@font/poppin_medium"
            android:gravity="center"
            android:text="Send Message"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp" />

        <View
            android:id="@+id/viewBelowSendMessage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginVertical="@dimen/_5sdp"
            android:alpha=".1"
            android:background="@color/black" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvViewUser"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:fontFamily="@font/poppin_medium"
            android:gravity="center"
            android:text="View Member"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp" />


    </LinearLayout>
</com.google.android.material.card.MaterialCardView>