<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/lightBlack"
    app:cardCornerRadius="@dimen/_20sdp"
    android:layout_margin="@dimen/_10sdp">
    <LinearLayout
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_170sdp"
        android:gravity="center"
        android:orientation="vertical">


        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:visibility="visible"
            app:civ_border_width="@dimen/_1sdp"
            app:civ_border_color="@color/blue"
            android:src="@drawable/ic_user" />

        <TextView
            android:id="@+id/tvInitial"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:fontFamily="@font/poppins_semi_bold"
            android:layout_marginStart="@dimen/_5sdp"
            android:text="A"
            android:textAlignment="center"
            android:gravity="center"
            android:background="@drawable/circle_shape_bg"
            android:visibility="gone"
            android:maxLength="1"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_25ssp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/poppin_medium"
            android:gravity="center"
            android:text="Add Your Stories "
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp" />

        <ImageButton
            android:id="@+id/ivAddStory"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/circular_shape_button"
            android:src="@drawable/ic_add" />

    </LinearLayout>
</androidx.cardview.widget.CardView>